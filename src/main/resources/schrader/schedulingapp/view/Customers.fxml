<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="gridePane" maxHeight="600.0" maxWidth="1000.0" minHeight="600.0" minWidth="1000.0" style="-fx-background-color: #93CAED;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="schrader.schedulingapp.controller.CustomersController">
    <children>
        <TableView fx:id="customerTable" editable="true" maxHeight="400.0" maxWidth="980.0" minHeight="400.0" minWidth="990.0" prefHeight="400.0" prefWidth="990.0" GridPane.rowIndex="1">
            <columns>
                <TableColumn fx:id="customerId" maxWidth="60.0" minWidth="60.0" prefWidth="-1.0" text="Cust. ID" />
                <TableColumn fx:id="name" maxWidth="105.0" minWidth="105.0" prefWidth="-1.0" text="Name" />
                <TableColumn fx:id="address" maxWidth="157.0" minWidth="157.0" prefWidth="-1.0" text="Address" />
                <TableColumn fx:id="postalCode" maxWidth="60.0" minWidth="60.0" prefWidth="-1.0" text="Postal" />
                <TableColumn fx:id="phoneNumber" maxWidth="100.0" minWidth="100.0" prefWidth="-1.0" text="Phone" />
                <TableColumn fx:id="createDate" maxWidth="140.0" minWidth="140.0" prefWidth="-1.0" text="Create Date" />
                <TableColumn fx:id="createdBy" maxWidth="80.0" minWidth="80.0" prefWidth="-1.0" text="Created By" />
                <TableColumn fx:id="lastUpdated" maxWidth="140.0" minWidth="140.0" prefWidth="-1.0" text="Last Updated" />
                <TableColumn fx:id="lastUpdatedBy" maxWidth="80.0" minWidth="80.0" prefWidth="-1.0" text="Updated By" />
                <TableColumn fx:id="division" maxWidth="130.0" minWidth="130.0" prefWidth="-1.0" text="Division" />
            </columns>
            <GridPane.margin>
                <Insets left="5.0" />
            </GridPane.margin>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <Label fx:id="screenLabel" maxWidth="150.0" minWidth="150.0" style="-fx-border-color: white; -fx-background-color: orange; -fx-border-radius: 10px; -fx-background-radius: 12px;" text="Customers" textFill="#5a5a5a">
            <font>
                <Font name="Geneva" size="25.0" />
            </font>
            <GridPane.margin>
                <Insets left="15.0" top="30.0" />
            </GridPane.margin>
            <padding>
                <Insets bottom="5.0" left="10.0" top="5.0" />
            </padding>
        </Label>
        <Button fx:id="add" maxHeight="28.0" minHeight="28.0" mnemonicParsing="false" onAction="#onAddClick" text="Add" textFill="#5a5a5a" GridPane.rowIndex="2">
            <font>
                <Font name="Arial" size="15.0" />
            </font>
            <GridPane.margin>
                <Insets bottom="35.0" left="745.0" />
            </GridPane.margin>
        </Button>
        <Button fx:id="modify" maxHeight="28.0" minHeight="28.0" mnemonicParsing="false" onAction="#onModifyClick" text="Modify" textFill="#5a5a5a" GridPane.rowIndex="2">
            <font>
                <Font name="Arial" size="15.0" />
            </font>
            <GridPane.margin>
                <Insets bottom="35.0" left="815.0" />
            </GridPane.margin>
        </Button>
        <Button fx:id="delete" maxHeight="28.0" minHeight="28.0" mnemonicParsing="false" onAction="#onDelete" text="Delete" textFill="#5a5a5a" GridPane.rowIndex="2">
            <font>
                <Font name="Arial" size="15.0" />
            </font>
            <GridPane.margin>
                <Insets bottom="35.0" left="900.0" />
            </GridPane.margin>
        </Button>
        <Button fx:id="logout" maxHeight="28.0" minHeight="28.0" mnemonicParsing="false" onAction="#onLogoutClick" text="Logout" textFill="#5a5a5a" GridPane.rowIndex="2">
            <font>
                <Font name="Arial" size="15.0" />
            </font>
            <GridPane.margin>
                <Insets bottom="35.0" left="25.0" />
            </GridPane.margin>
        </Button>
        <Button fx:id="viewAppointments" maxHeight="28.0" minHeight="28.0" mnemonicParsing="false" onAction="#onAppointmentClick" text="View Appointments" textFill="#5a5a5a">
            <font>
                <Font name="Arial" size="15.0" />
            </font>
            <GridPane.margin>
                <Insets left="825.0" top="80.0" />
            </GridPane.margin>
        </Button>
    </children>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="134" />
        <RowConstraints prefHeight="500" />
        <RowConstraints prefHeight="134" />
    </rowConstraints>
</GridPane>
